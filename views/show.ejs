<% include _head.ejs %>


<section class="section">
    <div class="container">
        <h1 class="title has-text-centered"><a><%- site.origin %></a></h1>

        <canvas id="myChart" height="100"></canvas>
        <form>
            <div class="field">
                <label class="label"># Days to show</label>
                <div class="control">
                    <input id="daysToShow" class="input" type="number" placeholder="7" style="max-width: 120px;">
                    <button class="button is-primary" type="button" onclick="updateDayCount()">Update</button>
                </div>
            </div>
        </form>

        <hr/>

        <% if(site.browserStats){ %>
            <div class="columns">
                <div class="column">
                    <div id="browser-os"></div>
                </div>
                <div class="column">
                    <div id="browser-name"></div>
                </div>
                <div class="column">
                    <div id="browser-mobile"></div>
                </div>
            </div>
            <hr/>
        <% } %>

        <section class="accordions">
            <% if(site.browsers){ %>
                <article class="accordion is-active">
                    <div class="accordion-header">
                        <p>Browsers</p>
                        <button class="toggle" aria-label="toggle"></button>
                    </div>
                    <div class="accordion-body">
                        <div class="accordion-content">
                            <table class="table is-fullwidth">
                                <thead>
                                <tr>
                                    <th><abbr title="Name">Name</abbr></th>
                                    <th>Version</th>
                                    <th>Version #</th>
                                    <th>Mobile</th>
                                    <th>OS</th>
                                </tr>
                                </thead>
                                <tbody>

                                <% site.browsers.map(browser=>{ %>
                                    <tr>
                                        <th><%- browser.name %></th>
                                        <th><%- browser.version %></th>
                                        <th><%- browser.versionNumber %></th>
                                        <th><%- browser.mobile %></th>
                                        <td><%- browser.os %></td>
                                    </tr>
                                <% }) %>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </article>
            <% } %>

            <article class="accordion">
                <div class="accordion-header">
                    <p>Paths</p>
                    <button class="toggle" aria-label="toggle"></button>
                </div>
                <div class="accordion-body">
                    <div class="accordion-content">
                        <table class="table is-fullwidth">
                            <thead>
                            <tr>
                                <th><abbr title="Path">Path</abbr></th>
                                <th>Visits</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% site.paths.map(path=>{ %>
                                <tr>
                                    <th><%- path.path %></th>
                                    <td><%- path.count %></td>
                                </tr>

                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </article>
        </section>
    </div>
</section>

